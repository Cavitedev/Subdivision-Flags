{
    "name": "Osu Subdivide Nations",
    "version": "1.0.0",
    "description": "Updates national flags into regional flags in Osu! website.\n Flags from Wikimedia Commons. Check attribution of individual flags there",
    "permissions": ["tabs"],
    "host_permissions": [
        "https://osu.ppy.sh/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://osu.ppy.sh/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://osu.ppy.sh/*"
            ],
            "resources": [
                "local_user_regions.js",
                "flags.json"
            ]
        }
    ],
    "manifest_version": 3
}