{
    "compilerOptions": {
        "target": "ES2020",
        "baseUrl": "",
        "module": "ES2020",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "moduleResolution": "Bundler",
        "lib": ["ES2022", "Dom", "DOM.Iterable"],
        "types": ["chrome"],
        "downlevelIteration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",

        "esModuleInterop": true,
        "typeRoots": ["./src", "./node_modules/@types/", "./node_modules"]
    }
}
